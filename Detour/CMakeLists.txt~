cmake_minimum_required (VERSION 2.6)
project (Detour)

# Compiler flags
set (CMAKE_CXX_FLAGS "-std=c++11 -W -Wall -g")

set (SOURCES
	Sources/DetourAlloc.cpp
	Sources/DetourNavMeshBuilder.cpp
	Sources/DetourNavMeshQuery.cpp
	Sources/DetourCommon.cpp
	Sources/DetourNavMesh.cpp
	Sources/DetourNode.cpp
)

add_library(Detour SHARED ${SOURCES})
